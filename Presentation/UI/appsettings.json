{
  "Connection": {
    "ConnectionString": "Server=.;Database=Lens;Trusted_Connection=True;TrustServerCertificate=True",
    "DefaultSchema": "",
    "SensitiveDataLoggingEnabled": false,
    "DetailedErrorsEnabled": true,
    "ProviderType": "SqlServer",
    "License": ""
  },
  "Hangfire": {
    "JobRetryAttempts": "0",
    "JobRetryDelayInSeconds": "300"
  },
  "EnableAudit": true,
  "Serilog": {
    "Using": [ "Serilog.Sinks.Async", "Serilog.Sinks.File", "Serilog.Settings.Configuration", "Serilog.Expressions", "Serilog.Enrichers.ClientInfo", "Serilog.Sinks.Elasticsearch" ],
    "LevelSwitches": { "$controlSwitch": "Verbose" },
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
        "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Information",
        "Hangfire": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://172.28.33.6:9200",
          "indexFormat": "Lens-{0:yyyy.MM}",
          "connectionGlobalHeaders": "Authorization=Basic TmV0YmFuazpOZXRCYW5rQDEyMw==",
          "numberOfShards": 3,
          "numberOfReplicas": 0
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/log_.log",
                "outputTemplate": "{Timestamp:o} [{Level:u3}] ({MachineName}/{ThreadId}) {Message}{NewLine}{Exception}",
                "encoding": "System.Text.Encoding::UTF8",
                "rollingInterval": "Day",
                "shared": true,
                "rollOnFileSizeLimit": true,
                "buffered": false
              }
            }
          ]
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithExceptionDetails",
      "WithCorrelationId",
      "WithCorrelationIdHeader",
      "WithClientAgent",
      {
        "Name": "WithClientIp",
        "Args": { "xForwardHeaderName": "X-Forwarded-For" }
      }
    ]
  },
  "IdentityOptions": {
    "Lockout": {
      "AllowedForNewUsers": true,
      "DefaultLockoutTimeSpan": "0.00:05:00.0000",
      "MaxFailedAccessAttempts": 5
    },
    "Password": {
      "RequireDigit": true,
      "RequiredLength": 8,
      "RequiredUniqueChars": 1,
      "RequireLowercase": true,
      "RequireNonAlphanumeric": true,
      "RequireUppercase": true
    },
    "SignIn": {
      "RequireConfirmedAccount": false,
      "RequireConfirmedEmail": false,
      "RequireConfirmedPhoneNumber": false
    },
    "User": {
      "RequireUniqueEmail": true,
      "AllowedUserNameCharacters": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789-._@+\\"
    },
    "Tokens": {
      "ApiDataProtectorTokenProviderOptions": {
        "TokenLifespan": "10.00:00:00.0000"
      }
    },
    "SecurityStampValidator": {
      "ValidationInterval": "00.00:00:00.0000"
    },
    "DataProtection": {
      "Lifetime": "365.00:00:00.0000"
    }
  },
  "CorsUrls": [
    "https://localhost:4200",
    "https://localhost:7190",
    "https://localhost"
  ],
  "AllowedHosts": "*"
}
