{
    "Connection": {
        "ConnectionString": "Server=.;Database=myDataBase;User Id=myUsername;Password=myPassword;",
        "DefaultSchema": "***",
        "SensitiveDataLoggingEnabled": false,
        "DetailedErrorsEnabled": true,
        "ProviderType": "SqlServer",
        "License": ""
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.Async", "Serilog.Sinks.File", "Serilog.Settings.Configuration", "Serilog.Expressions", "Serilog.Enrichers.ClientInfo" ],
        "LevelSwitches": { "$controlSwitch": "Verbose" },
        "MinimumLevel": {
            "Default": "Warning",
            "Override": {
                "System": "Warning",
                "Microsoft": "Warning",
                "Microsoft.Hosting.Lifetime": "Warning",
                "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
                "Hangfire": "Information"
            }
        },
        "WriteTo:Async": {
            "Name": "Async",
            "Args": {
                "configure": [
                    {
                        "Name": "File",
                        "Args": {
                            "path": "logs/log_.log",
                            "outputTemplate": "{Timestamp:o} [{Level:u3}] ({MachineName}/{ThreadId}) {Message}{NewLine}{Exception}",
                            "encoding": "System.Text.Encoding::UTF8",
                            "rollingInterval": "Day",
                            "shared": true,
                            "rollOnFileSizeLimit": true,
                            "buffered": false
                        }
                    }
                ]
            }
        },
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithExceptionDetails",
            "WithCorrelationId",
            "WithCorrelationIdHeader",
            "WithClientAgent",
            {
                "Name": "WithClientIp",
                "Args": { "xForwardHeaderName": "X-Forwarded-For" }
            }
        ]
    },
    "IdentityOptions": {
        "Lockout": {
            "AllowedForNewUsers": true,
            "DefaultLockoutTimeSpan": "0.00:05:00.0000",
            "MaxFailedAccessAttempts": 5
        },
        "Password": {
            "RequireDigit": true,
            "RequiredLength": 6,
            "RequiredUniqueChars": 1,
            "RequireLowercase": true,
            "RequireNonAlphanumeric": true,
            "RequireUppercase": true
        },
        "SignIn": {
            "RequireConfirmedAccount": false,
            "RequireConfirmedEmail": false,
            "RequireConfirmedPhoneNumber": false
        },
        "User": {
            "RequireUniqueEmail": true
        }
    },
    "AllowedHosts": "*"
}
